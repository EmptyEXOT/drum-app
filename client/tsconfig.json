{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "ESNext",
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/webpack/*": ["./webpackConfig/*"],
      "assets/*": ["./src/shared/assets/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.svg",
    "./webpackConfig/*.ts",
    "./public",
    "webpack.config.ts",
  ]
}